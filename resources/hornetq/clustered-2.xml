<configuration xmlns="urn:hornetq"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="urn:hornetq /schema/hornetq-configuration.xsd">
   
   <paging-directory>${data.dir:../data}/paging-5455</paging-directory>
   
   <bindings-directory>${data.dir:../data}/bindings-5455</bindings-directory>
   
   <journal-directory>${data.dir:../data}/journal-5455</journal-directory>
   
   <journal-min-files>10</journal-min-files>
   
   <large-messages-directory>${data.dir:../data}/large-messages-5455</large-messages-directory>

   <connectors>      
      <connector name="netty-udp-connector">
         <factory-class>org.hornetq.core.remoting.impl.netty.NettyConnectorFactory</factory-class>
         <param key="host"  value="${hornetq.remoting.netty.host:localhost}"/>
         <param key="port"  value="${hornetq.remoting.netty.port:5455}"/>
      </connector>

      <connector name="netty-throughput-udp-connector">
         <factory-class>org.hornetq.core.remoting.impl.netty.NettyConnectorFactory</factory-class>
         <param key="host"  value="${hornetq.remoting.netty.host:localhost}"/>
         <param key="port"  value="${hornetq.remoting.netty.batch.port:5457}"/>
         <param key="batch-delay" value="50"/>
      </connector>
   </connectors>

   <acceptors>
      <acceptor name="netty-udp-acceptor">
         <factory-class>org.hornetq.core.remoting.impl.netty.NettyAcceptorFactory</factory-class>
         <param key="host"  value="${hornetq.remoting.netty.host:localhost}"/>
         <param key="port"  value="${hornetq.remoting.netty.port:5455}"/>
      </acceptor>

      <acceptor name="netty-throughput-udp-acceptor">
         <factory-class>org.hornetq.core.remoting.impl.netty.NettyAcceptorFactory</factory-class>
         <param key="host"  value="${hornetq.remoting.netty.host:localhost}"/>
         <param key="port"  value="${hornetq.remoting.netty.batch.port:5457}"/>
         <param key="batch-delay" value="50"/>
         <param key="direct-deliver" value="false"/>
      </acceptor>
   </acceptors>

   <broadcast-groups>
      <broadcast-group name="onyx-udp-broadcast-group">
         <group-address>231.7.7.7</group-address>
         <group-port>9876</group-port>
         <broadcast-period>5000</broadcast-period>
         <connector-ref>netty-udp-connector</connector-ref>
      </broadcast-group>
   </broadcast-groups>

   <discovery-groups>
      <discovery-group name="onyx-udp-discovery-group">
         <group-address>231.7.7.7</group-address>
         <group-port>9876</group-port>
         <refresh-timeout>10000</refresh-timeout>
      </discovery-group>
   </discovery-groups>
   
   <cluster-connections>
      <cluster-connection name="onyx-cluster">
         <address>onyx</address>	 
         <connector-ref>netty-udp-connector</connector-ref>
         <forward-when-no-consumers>false</forward-when-no-consumers>
	     <discovery-group-ref discovery-group-name="onyx-udp-discovery-group"/>
      </cluster-connection>
   </cluster-connections>
   
   <grouping-handler name="onyx">
      <type>REMOTE</type>
      <address>onyx</address>
      <timeout>5000</timeout>
   </grouping-handler>

   <management-address>onyx.queue.hornetq.management</management-address>

   <security-enabled>false</security-enabled>

   <address-settings>
      <!--default for catch all-->
      <address-setting match="#">
         <dead-letter-address>jms.queue.DLQ</dead-letter-address>
         <expiry-address>jms.queue.ExpiryQueue</expiry-address>
         <redelivery-delay>0</redelivery-delay>
         <max-size-bytes>104857600</max-size-bytes>
         <page-size-bytes>10485760</page-size-bytes>
         <redistribution-delay>100</redistribution-delay>
         <message-counter-history-day-limit>10</message-counter-history-day-limit>
         <address-full-policy>PAGE</address-full-policy>
      </address-setting>
   </address-settings>
</configuration>
